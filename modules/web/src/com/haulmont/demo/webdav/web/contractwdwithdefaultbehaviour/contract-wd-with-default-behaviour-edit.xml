<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.demo.webdav.web.contractwdwithdefaultbehaviour.ContractWDWithDefaultBehaviourEdit"
        datasource="contractWDWithDefaultBehaviourDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.demo.webdav.web.contractwdwithdefaultbehaviour">
    <dsContext>
        <datasource id="contractWDWithDefaultBehaviourDs"
                    class="com.haulmont.demo.webdav.entity.ContractWDWithDefaultBehaviour"
                    view="contractWDWithDefaultBehaviour-default-view"/>
        <collectionDatasource id="contractorsDs"
                              class="com.haulmont.demo.webdav.entity.ContractUser"
                              view="_minimal">
            <query>
                <![CDATA[select e from webdavdemo$ContractUser e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="contractWDWithDefaultBehaviourDs">
            <column width="250px">
                <field property="number"/>
                <field optionsDatasource="contractorsDs"
                       property="contractor"/>
                <field property="document"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
