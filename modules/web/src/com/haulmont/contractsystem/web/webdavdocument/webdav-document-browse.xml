<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.contractsystem.web.webdavdocument.WebdavDocumentBrowse"
        focusComponent="webdavDocumentsTable"
        lookupComponent="webdavDocumentsTable"
        messagesPack="com.haulmont.contractsystem.web.webdavdocument">
    <dsContext>
        <groupDatasource id="webdavDocumentsDs"
                         class="com.haulmont.webdav.entity.WebdavDocument"
                         view="_local">
            <query>
                <![CDATA[select e from webdav$WebdavDocument e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="webdavDocumentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="webdavDocumentsTable"
                datasource="webdavDocumentsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="webdavDocumentsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="id"/>
                <column id="versioning"/>
            </columns>
            <rows datasource="webdavDocumentsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="webdavDocumentsTable.create"/>
                <button id="editBtn"
                        action="webdavDocumentsTable.edit"/>
                <button id="removeBtn"
                        action="webdavDocumentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
