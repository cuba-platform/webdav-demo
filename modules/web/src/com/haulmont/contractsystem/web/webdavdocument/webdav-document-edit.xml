<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.contractsystem.web.webdavdocument.WebdavDocumentEdit"
        datasource="webdavDocumentDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.contractsystem.web.webdavdocument">
    <dsContext>
        <datasource id="webdavDocumentDs"
                    class="com.haulmont.webdav.entity.WebdavDocument"
                    view="webdavDocument-view-with-dependencies">
            <collectionDatasource id="versionsDs"
                                  property="versions"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mainBox"
            spacing="true">
        <vbox id="mainBox"
              expand="versionsTable"
              spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="webdavDocumentDs">
                <column width="250px">
                    <field property="versioning"/>
                    <field property="webdavLockDescriptor"/>
                </column>
            </fieldGroup>
            <table id="versionsTable"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="refresh"/>
                </actions>
                <columns>
                    <column id="contentType"/>
                    <column id="contentLength"/>
                    <column id="sha1sum"/>
                    <column id="naturalVersionIdentifier"/>
                </columns>
                <rows datasource="versionsDs"/>
                <buttonsPanel>
                    <button action="versionsTable.create"/>
                    <button action="versionsTable.edit"/>
                    <button action="versionsTable.refresh"/>
                </buttonsPanel>
            </table>
        </vbox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
