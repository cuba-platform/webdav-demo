<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.contractsystem.web.contract.ContractEdit"
        datasource="contractDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.contractsystem.web.contract">
    <dsContext>
        <datasource id="contractDs"
                    class="com.haulmont.contractsystem.entity.Contract"
                    view="contract-with-deps-view">
            <datasource id="documentDs"
                        property="document"/>
        </datasource>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                width="AUTO"/>
    <layout expand="windowActions"
            margin="true"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="contractDs"
                    width="100%">
            <column width="400px">
                <field property="name"/>
                <field property="contractor"/>
                <field property="document"/>
            </column>
        </fieldGroup>
        <upload datasource="documentDs"/>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
