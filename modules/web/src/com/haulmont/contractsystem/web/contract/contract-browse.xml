<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:webdav="http://schemas.haulmont.com/webdav/ui-component.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.contractsystem.web.contract.ContractBrowse"
        focusComponent="contractsTable"
        lookupComponent="contractsTable"
        messagesPack="com.haulmont.contractsystem.web.contract">
    <dsContext>
        <groupDatasource id="contractsDs"
                         class="com.haulmont.contractsystem.entity.Contract"
                         view="contract-with-deps-view">
            <query>
                <![CDATA[select e from contractsystem$Contract e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contractsTable"
            spacing="true">
        <filter id="filter"
                applyTo="contractsTable"
                datasource="contractsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="contractsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="refresh"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="latestVersion"
                        caption="msg://latestVersion"
                        generator="generateLatestVersionCell"/>
                <column id="link"
                        caption="msg://link"
                        generator="generateLinkCell"/>
            </columns>
            <rows datasource="contractsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="contractsTable.create"/>
                <button id="editBtn"
                        action="contractsTable.edit"/>
                <button id="removeBtn"
                        action="contractsTable.remove"/>
                <button id="refreshBtn"
                        action="contractsTable.refresh"/>
            </buttonsPanel>
        </groupTable>

        <webdav:documentLink caption="test" documentId="test" showVersion="false" icon="icons/save.png" description="testdesc"/>
    </layout>
</window>
