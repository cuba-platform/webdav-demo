<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.contractsystem.web.contractor.ContractorEdit"
        datasource="contractorDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.contractsystem.web.contractor">
    <dsContext>
        <datasource id="contractorDs"
                    class="com.haulmont.contractsystem.entity.Contractor"
                    view="contractor-view">
            <collectionDatasource id="contractsDs"
                                  property="contracts"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contractsBox"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="contractorDs">
            <column width="250px">
                <field property="name"/>
                <field property="email"/>
            </column>
        </fieldGroup>
        <groupBox id="contractsBox"
                  caption="Contracts"
                  spacing="true">
            <table id="contractsTable"
                   height="100%"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="document"
                            generator="generateDocumentCell"/>
                </columns>
                <rows datasource="contractsDs"/>
                <buttonsPanel>
                    <button action="contractsTable.create"/>
                    <button action="contractsTable.edit"/>
                    <button action="contractsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
