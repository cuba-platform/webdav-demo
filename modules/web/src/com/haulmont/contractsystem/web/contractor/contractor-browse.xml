<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.contractsystem.web.contractor.ContractorBrowse"
        focusComponent="contractorsTable"
        lookupComponent="contractorsTable"
        messagesPack="com.haulmont.contractsystem.web.contractor">
    <dsContext>
        <groupDatasource id="contractorsDs"
                         class="com.haulmont.contractsystem.entity.Contractor"
                         view="_local">
            <query>
                <![CDATA[select e from contractsystem$Contractor e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contractorsTable"
            spacing="true">
        <filter id="filter"
                applyTo="contractorsTable"
                datasource="contractorsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="contractorsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="email"/>
            </columns>
            <rows datasource="contractorsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="contractorsTable.create"/>
                <button id="editBtn"
                        action="contractorsTable.edit"/>
                <button id="removeBtn"
                        action="contractorsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
