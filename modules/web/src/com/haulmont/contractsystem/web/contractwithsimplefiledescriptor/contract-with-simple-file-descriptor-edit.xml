<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.contractsystem.web.contractwithsimplefiledescriptor.ContractWithSimpleFileDescriptorEdit"
        datasource="contractWithSimpleFileDescriptorDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.contractsystem.web.contractwithsimplefiledescriptor">
    <dsContext>
        <datasource id="contractWithSimpleFileDescriptorDs"
                    class="com.haulmont.contractsystem.entity.ContractWithSimpleFileDescriptor"
                    view="contractWithSimpleFileDescriptorEdit-view"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="contractWithSimpleFileDescriptorDs">
            <column width="250px">
                <field property="name"/>
                <field property="file"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
