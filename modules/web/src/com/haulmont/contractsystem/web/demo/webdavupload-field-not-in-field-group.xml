<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://menu-config.webdavupload-field-not-in-field-group"
        class="com.haulmont.contractsystem.web.demo.WebdavUploadFieldNotInFieldGroup"
        messagesPack="com.haulmont.contractsystem.web.demo"
        xmlns:webdav="http://schemas.haulmont.com/webdav/ui-component.xsd">
    <dsContext>
        <collectionDatasource id="contractsDs"
                              class="com.haulmont.contractsystem.entity.Contract"
                              view="contract-view">
            <query>
                <![CDATA[select e from contractsystem$Contract e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <vbox spacing="true">
            <table id="contractsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="refresh"/>
                </actions>
                <columns>
                    <column id="name"/>
                    <column id="document"
                            generator="generateDocumentCell"/>
                </columns>
                <rows datasource="contractsDs"/>
                <buttonsPanel>
                    <button action="contractsTable.refresh"/>
                </buttonsPanel>
            </table>
            <label id="selectedItem"/>
            <grid height="200px"
                  spacing="true"
                  width="800px">
                <columns count="3"/>
                <rows>
                    <row>
                        <label/>
                        <label align="MIDDLE_CENTER"
                               value="Webdav"/>
                        <label align="MIDDLE_CENTER"
                               value="Upload"/>
                    </row>
                    <row>
                        <label align="MIDDLE_LEFT"
                               value="ShowFilename = false"/>
                        <webdav:w-upload align="MIDDLE_RIGHT"
                                         datasource="contractsDs"
                                         property="document"/>
                        <upload align="MIDDLE_RIGHT"
                                datasource="contractsDs"
                                property="document"/>
                    </row>
                    <row>
                        <label align="MIDDLE_LEFT"
                               value="ShowFilename = true"/>
                        <webdav:w-upload align="MIDDLE_RIGHT"
                                         datasource="contractsDs"
                                         property="document"
                                         showFileName="true"/>
                        <upload id="upload2"
                                align="MIDDLE_RIGHT"
                                datasource="contractsDs"
                                property="document"
                                showFileName="true"/>
                    </row>
                </rows>
            </grid>
            <label value="Read-only link to the last version:"/>
            <webdav:document-version-link id="documentVersionLink"/>
            <button id="save"
                    caption="msg://save"
                    invoke="onSaveClick"/>
        </vbox>
    </layout>
</window>
