<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.contractsystem.web.contractfdwithdefaultbehaviour.ContractFDWithDefaultBehaviourEdit"
        datasource="contractFDWithDefaultBehaviourDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.contractsystem.web.contractfdwithdefaultbehaviour">
    <dsContext>
        <datasource id="contractFDWithDefaultBehaviourDs"
                    class="com.haulmont.contractsystem.entity.ContractFDWithDefaultBehaviour"
                    view="contractFDWithDefaultBehaviour-default-view"/>
        <collectionDatasource id="contractorsDs"
                              class="com.haulmont.contractsystem.entity.ContractUser"
                              view="_minimal">
            <query>
                <![CDATA[select e from contractsystem$ContractUser e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="contractFDWithDefaultBehaviourDs">
            <column width="250px">
                <field property="number"/>
                <field optionsDatasource="contractorsDs"
                       property="contractor"/>
                <field property="document"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
