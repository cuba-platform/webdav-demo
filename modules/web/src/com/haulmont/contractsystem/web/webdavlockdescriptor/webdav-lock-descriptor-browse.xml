<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.contractsystem.web.webdavlockdescriptor.WebdavLockDescriptorBrowse"
        focusComponent="webdavLockDescriptorsTable"
        lookupComponent="webdavLockDescriptorsTable"
        messagesPack="com.haulmont.contractsystem.web.webdavlockdescriptor">
    <dsContext>
        <groupDatasource id="webdavLockDescriptorsDs"
                         class="com.haulmont.webdav.entity.WebdavLockDescriptor"
                         view="webdavLockDescriptor-with-deps-view">
            <query>
                <![CDATA[select e from webdav$WebdavLockDescriptor e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="webdavLockDescriptorsTable"
            spacing="true">
        <filter id="filter"
                applyTo="webdavLockDescriptorsTable"
                datasource="webdavLockDescriptorsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="webdavLockDescriptorsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="timeout"/>
                <column id="webdavDocument"/>
            </columns>
            <rows datasource="webdavLockDescriptorsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="webdavLockDescriptorsTable.create"/>
                <button id="editBtn"
                        action="webdavLockDescriptorsTable.edit"/>
                <button id="removeBtn"
                        action="webdavLockDescriptorsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
