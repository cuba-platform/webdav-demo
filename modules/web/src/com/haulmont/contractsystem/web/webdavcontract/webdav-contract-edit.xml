<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.contractsystem.web.webdavcontract.WebdavContractEdit"
        datasource="webdavContractDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.contractsystem.web.webdavcontract">
    <dsContext>
        <datasource id="webdavContractDs"
                    class="com.haulmont.contractsystem.entity.WebdavContract"
                    view="webdavContract-view"/>
    </dsContext>
    <dialogMode forceDialog="true"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="webdavContractDs"
                    width="400px">
            <column width="100%">
                <field property="name"/>
                <field property="contractor"/>
                <field property="document"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
