<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.contractsystem.web.webdavcontract.WebdavContractBrowse"
        focusComponent="webdavContractsTable"
        lookupComponent="webdavContractsTable"
        messagesPack="com.haulmont.contractsystem.web.webdavcontract">
    <dsContext>
        <groupDatasource id="webdavContractsDs"
                         class="com.haulmont.contractsystem.entity.WebdavContract"
                         view="webdavContract-view">
            <query>
                <![CDATA[select e from contractsystem$WebdavContract e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="webdavContractsTable"
            spacing="true">
        <filter id="filter"
                applyTo="webdavContractsTable"
                datasource="webdavContractsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="webdavContractsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="document"
                        generator="generateDocumentCell"/>
            </columns>
            <rows datasource="webdavContractsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="webdavContractsTable.create"/>
                <button id="editBtn"
                        action="webdavContractsTable.edit"/>
                <button id="removeBtn"
                        action="webdavContractsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
