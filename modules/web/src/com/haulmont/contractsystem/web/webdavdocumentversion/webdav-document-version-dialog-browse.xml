<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:webdav="http://schemas.haulmont.com/webdav/ui-component.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.contractsystem.web.webdavdocumentversion.WebdavDocumentVersionDialogBrowse"
        focusComponent="webdavDocumentVersionsTable"
        lookupComponent="webdavDocumentVersionsTable"
        messagesPack="com.haulmont.contractsystem.web.webdavdocumentversion">
    <dsContext>
        <groupDatasource id="webdavDocumentVersionsDs"
                         class="com.haulmont.webdav.entity.WebdavDocumentVersion"
                         view="webdavDocumentVersion-with-deps-view">
            <query>
                <![CDATA[select e from webdav$WebdavDocumentVersion e where e.webdavDocument.id = :param$document.id order by e.naturalVersionIdentifier]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="webdavDocumentVersionsTable"
                    height="100%"
                    width="100%">
            <columns>
                <column id="naturalVersionIdentifier"
                        caption="msg://version"/>
                <column id="fileDescriptor.name"/>
                <column id="webdavDocument"
                        collapsed="true"/>
                <column id="contentType"
                        collapsed="true"/>
                <column id="sha1sum"
                        collapsed="true"/>
                <column id="createTs"
                        caption="msg://createTs"/>
                <column id="createdBy"
                        caption="msg://author"/>
                <column id="link"
                        caption="msg://link"
                        generator="generateLinkCell"/>
            </columns>
            <rows datasource="webdavDocumentVersionsDs"/>
            <rowsCount/>
        </groupTable>
    </layout>
</window>
