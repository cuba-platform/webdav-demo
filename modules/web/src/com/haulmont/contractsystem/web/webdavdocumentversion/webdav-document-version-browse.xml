<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.contractsystem.web.webdavdocumentversion.WebdavDocumentVersionBrowse"
        focusComponent="webdavDocumentVersionsTable"
        lookupComponent="webdavDocumentVersionsTable"
        messagesPack="com.haulmont.contractsystem.web.webdavdocumentversion">
    <dsContext>
        <groupDatasource id="webdavDocumentVersionsDs"
                         class="com.haulmont.webdav.entity.WebdavDocumentVersion"
                         view="webdavDocumentVersion-with-deps-view">
            <query>
                <![CDATA[select e from webdav$WebdavDocumentVersion e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="webdavDocumentVersionsTable"
            spacing="true">
        <filter id="filter"
                applyTo="webdavDocumentVersionsTable"
                datasource="webdavDocumentVersionsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="webdavDocumentVersionsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="fileDescriptor"/>
                <column id="webdavDocument"/>
                <column id="contentType"/>
                <column id="contentLength"/>
                <column id="sha1sum"/>
                <column id="naturalVersionIdentifier"/>
            </columns>
            <rows datasource="webdavDocumentVersionsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="webdavDocumentVersionsTable.create"/>
                <button id="editBtn"
                        action="webdavDocumentVersionsTable.edit"/>
                <button id="removeBtn"
                        action="webdavDocumentVersionsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
